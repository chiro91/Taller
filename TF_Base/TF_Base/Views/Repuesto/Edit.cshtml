@model TF_Base.Models.Repuesto

@{
    ViewBag.Title = "Modificar";
}

<h2 class="text-center">Modificar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="text-center">
        <legend>Repuesto</legend>

        @Html.HiddenFor(model => model.idRepuesto)

        <div class="editor-label">
            @Html.LabelFor(model => model.nombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nombre)<br />
            @Html.ValidationMessageFor(model => model.nombre)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.costo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.costo)<br />
            @Html.ValidationMessageFor(model => model.costo)
        </div>

        <p>
            <input class="btn btn-outline-success" type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    <a class="text-center" href="@Url.Action("Index","Repuesto")">Volver</a>
    
</div>



