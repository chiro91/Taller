@model TF_Base.Models.Login

@{
    ViewBag.Title = "Login";
}
<div class="text-center">
<h2 style="background-color:black"><span style="color:white">Login</span></h2></div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="text-center">
        <legend>Login</legend>
        <div class="form-group">
        <div class="editor-label">
            <span style="font:bolder">@Html.LabelFor(f => f.UserName)</span>
            
        </div>
        <div class="editor-field">
            @Html.EditorFor(f => f.UserName)<br />
            @Html.ValidationMessageFor(f => f.UserName)
        </div></div>

        <div class="form-group">
        <div class="editor-label">
            @Html.LabelFor(f => f.Password)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(f => f.Password)
            <br />
            @Html.ValidationMessageFor(f => f.Password)
        </div>
            
        </div>

        <div class="form-check">
        <div class="editor-label">
            @Html.LabelFor(f => f.RememberMe)
        </div>
        <div class="editor-field">
            @Html.EditorFor(f => f.RememberMe)<br />
            @Html.ValidationMessageFor(f => f.RememberMe)
        </div></div>

        <input class="btn btn-outline-success" type="submit" value="Guardar" />
    </fieldset>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
